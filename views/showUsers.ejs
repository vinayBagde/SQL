<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User</title>
    <link rel="stylesheet" href="/showUsers.css" />
  </head>
  <body>
    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>Username</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% for(user of users) { %>
        <tr>
          <td><%= user.id %></td>
          <td><%=user.username %></td>
          <td><%=user.email %></td>
          <td>
            <form method="GET" action="/user/<%=  user.id %>/edit">
              <button>Edit username</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
